{% capture schema %}
  {
    "settings": {
      "marginTop": {{ section.settings.margin_top | json }},
      "marginBottom": {{ section.settings.margin_bottom | json }},
    },
    "blocks": [
      {% for block in section.blocks %}
        {
          "id": {{ block.id | json }},
          "type": {{ block.type | json }},
          "settings": {{ block.settings | json }},
          "itp_logo_alt": {{ block.settings.itp_logo.alt | json }}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
{% endcapture %}

{% if section.settings.section_header != blank %}
  <h4 class="section-header">{{section.settings.section_header}}</h4>
{% endif %}

<image-strip :schema="{{ schema | escape | strip }}" />

{% stylesheet %}
  .section-header {
    display: block;
    text-align: center;
    margin-top: 50px;
    @media(max-width: 749px) {
      margin-top: 28px;
    }
  }
{% endstylesheet %}

{% schema %}
  {
    "name": "Image Strip",
    "max_blocks": 5,

    "settings": [
      {
          "type": "header",
          "content": "section header"
      },
      {
          "type": "text",
          "id": "section_header",
          "label": "Please enter section header"
      },
      {
        "type": "header",
        "content": "Section Margins",
        "info": "Customize the margin spacing on the top and bottom of this section."
      },
      {
        "label": "Top Padding",
        "id": "margin_top",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 56
      },
      {
        "label": "Bottom Padding",
        "id": "margin_bottom",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 56
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "testimonial_block",
        "settings": [
          {
            "type": "header",
            "content": "Images",
            "info": "Add a minimum of 2 images"
          },
          {
            "label": "Logo Image",
            "type": "image_picker",
            "id": "itp_logo",
            "info": "Recommended size: 640px x 640px"
          },
          {
            "label": "Link",
            "type": "url",
            "id": "itp_url"
          },
          {
            "label": "Link Target",
            "type": "select",
            "id": "itp_link_target",
            "default": "_self",
            "options":
              [
                {"label":"Current Tab","value":"_self"},
                {"label":"New Tab","value":"_blank"}
              ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Strip",
        "category": "Content Blocks"
      }
    ]
  }
{% endschema %}
