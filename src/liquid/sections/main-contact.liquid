 <div class="contact-us__above-fold-wrap">
    <div class="contact-us__form-container">
        <h1 class="{{ section.settings.title_text_color }} contact-us__title h1">{{ page.title }}</h1>
        <div class="rte contact-us__content body-md">{{ page.content }}</div>

        {% if section.settings.form_enabled %}
        {%- form 'contact', id: 'contact-us__form', class: 'contact-us__form' -%}
            {%- if form.posted_successfully? -%}
            <div class="contact-us__success">
                <p class="contact-us__success-message h7">
                {% if section.settings.success_message != blank %}
                    {{ section.settings.success_message }}
                {% else %}
                    {{ 'contact.form.post_success' | t }}
                {% endif %}
                </p>
                <a
                class="button button--primary button--medium"
                href="{% if section.settings.success_link != blank %}{{ section.settings.success_link }}{% else %}/{% endif %}"
                >
                <span class="button__content">{{ section.settings.success_btn }}</span>
                </a>
            </div>
            {%- else -%}
            <div class="contact-us__success">
                <p class="contact-us__success-message h7">
                {{ form.errors | default_errors }}
                </p>
            </div>
            {%- endif -%}
            <div class="form-container {% if form.posted_successfully? %} u-hidden {% endif %}">
            <div class="input">
                <label class="label" for="ContactFormName">{{ 'contact.form.name' | t }}</label>
                <input
                type="text"
                name="contact[name]"
                id="ContactFormName"
                placeholder="{{ 'contact.placeholders.name' | t }}"
                required
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                >
            </div>
            <div class="input">
                <label class="label" for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
                <input
                type="email"
                name="contact[email]"
                required
                class="{% if form.errors contains 'email' %}input-error{% endif %}"
                id="ContactFormEmail"
                placeholder="{{ 'contact.placeholders.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off"
                >
            </div>
            {% comment %}
                <div class="input">
                <label class="label" for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
                <input type="tel"
                    name="contact[phone]"
                    id="ContactFormPhone"
                    placeholder="{{ 'contact.placeholders.phone' | t }}"
                    required
                    value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                    pattern="[0-9\-]*" />
                </div>
            {% endcomment %}
            <div class="input">
                <label class="label" for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
                <textarea
                name="contact[body]"
                rows="4"
                id="ContactFormMessage"
                placeholder="{{ 'contact.placeholders.message' | t }}"
                >
                {%- if form.body -%}
                    {{- form.body -}}
                {%- endif -%}
                </textarea>
            </div>

            <v-button primary type="submit" class="button" id="form_submit" value="{{ 'contact.form.send' | t }}">
                {{- 'contact.form.send' | t -}}
            </v-button>
            </div>
        {%- endform -%}
        {% endif %} 
    </div>
    {% if section.settings.phone != blank or section.settings.enable_address or section.settings.enable_social or section.blocks.size > 0 %}
    <div class="contact-us__info-blocks {{ section.settings.bg_color }}">
        {% for block in section.blocks %}
        <div class="contact-us__info-blocks--block">
            {% if block.settings.info_img != blank %}
            <img
                src="{{ block.settings.info_img | img_url: '100x' }}"
                alt="{{ block.settings.info_header | capitalize }}"
                height="{{ block.settings.info_img.height }}"
                width="{{ block.settings.info_img.width }}"
            >
            {% else %}
            <icon name="{{ block.settings.info_icon }}" size="24px" class="{{ section.settings.icon_color }}"></icon>
            {% endif %}
            <h6 class="h7 {{ section.settings.text_color }}">{{ block.settings.info_header }}</h6>
            <p class="body-md {{ section.settings.text_color }}">{{ block.settings.info_copy }}</p>
        </div>
        {% endfor %}
        {% if section.settings.phone != blank %}
        <div class="contact-us__info-blocks--block">
            <icon name="phone" size="24px" class="{{ section.settings.icon_color }}"></icon>
            <h6 class="h7 {{ section.settings.text_color }}">Phone:</h6>
            <p class="body-md {{ section.settings.text_color }}">{{ section.settings.phone }}</p>
        </div>
        {% endif %}
        {% if section.settings.enable_address %}
        <div class="contact-us__info-blocks--block">
            <icon name="location" size="24px" class="{{ section.settings.icon_color }}"></icon>
            <h6 class="h7 {{ section.settings.text_color }}">Address:</h6>
            <p class="body-md {{ section.settings.text_color }}">{{ section.settings.street }}</p>
