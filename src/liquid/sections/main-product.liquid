{% if product.type == 'Gift Card' %}
  <!-- Gift Card Template -->
  {% render 'product-display-gift-card', section:section %}
{% else %}
  <!-- Product Template and Yotpo Review-->
  {% render 'product-display-bourdain', section:section %}
{% endif %}


{% schema %}
{
    "name": "Product Page",
    "settings": [
    {
        "type": "paragraph",
        "content": "The following content is global and will appear on all product pages across the site."
    },
    {
        "type": "header",
        "content": "Shipping Details"
    },
    {
        "type": "text",
        "label": "Section Name",
        "id": "pdp_accordion_name",
        "default": "Shipping",
        "info": "Defaults to \"Shipping\""
    },
    {
        "type": "richtext",
        "label": "Section Content",
        "id": "pdp_accordion_content",
        "info": "If left blank, this accordion will not appear on the PDP."
    },
    {
        "type": "header",
        "content": "Product Recommendations"
    },
    {
        "type": "text",
        "label": "Heading",
        "id": "pdp_recommendations_heading",
        "default": "You May Also Like",
        "info": "Defaults to \"You May Also Like\""
    },
    {
        "type": "header",
        "content": "Reviews"
    },
    {
        "type": "checkbox",
        "label": "Hide Reviews",
        "id": "pdp_hide_reviews",
        "info": "Check the box if you donâ€™t want reviews to display on the product pages."
    },
    {
        "type": "header",
        "content": "Global Product Info Section"
    },
    {
        "type": "paragraph",
        "content": "These are the Global Product Info Section settings. If an image is selected below, this section will show on every product page."
    },
    {
        "label": "Global Product Info Section Image",
        "type": "image_picker",
        "id": "pdp_global_info_section_img",
        "info": "Recommended size is "
    },
    {
        "label": "Global Product Info Section Heading",
        "type": "text",
        "id": "pdp_global_info_section_heading"
    },
    {
        "label": "Global Product Info Section Heading Color",
        "type": "color",
        "id": "pdp_global_info_section_heading_color",
        "default": "#ffffff"
    },
    {
        "type": "header",
        "content": "Related Products Widget"
    },
    {
        "label": "Heading",
        "type": "text",
        "id": "pdp_product_rec_sidebar_heading",
        "info": "Displays in the right column of PDP if enabled on a product and viewport width > 1440px"
    },
    {
        "type": "header",
        "content": "Value Props"
    },
    {
        "type": "paragraph",
        "content": "Add content here for this section if the content will be the same for all products."
    },
    {
        "type": "color",
        "id": "pdp_value_props_background_color",
        "label": "Background Color",
        "default": "#F7F6F2"
    },
    {
        "type": "image_picker",
        "id": "pdp_vp_icon_0",
        "label": "Prop 1 - Image"
    },
    {
        "type": "text",
        "id": "pdp_vp_title_0",
        "label": "Prop 1 - Heading"
    },
    {
        "type": "textarea",
        "id": "pdp_vp_body_0",
        "label": "Prop 1 - Text"
    },
    {
        "type": "image_picker",
        "id": "pdp_vp_icon_1",
        "label": "Prop 2 - Image"
    },
    {
        "type": "text",
        "id": "pdp_vp_title_1",
        "label": "Prop 2 - Heading"
    },
    {
        "type": "textarea",
        "id": "pdp_vp_body_1",
        "label": "Prop 2 - Text"
    },
    {
        "type": "image_picker",
        "id": "pdp_vp_icon_2",
        "label": "Prop 3 - Image"
    },
    {
        "type": "text",
        "id": "pdp_vp_title_2",
        "label": "Prop 3 - Heading"
    },
    {
        "type": "textarea",
        "id": "pdp_vp_body_2",
        "label": "Prop 3 - Text"
    },
    {
        "type": "image_picker",
        "id": "pdp_vp_icon_3",
        "label": "Prop 4 - Image"
    },
    {
        "type": "text",
        "id": "pdp_vp_title_3",
        "label": "Prop 4 - Heading"
    },
    {
        "type": "textarea",
        "id": "pdp_vp_body_3",
        "label": "Prop 4 - Text"
    },
    {
        "type": "header",
        "content": "Featured Collections"
    },
    {
        "type": "paragraph",
        "content": "The below settings are used inconjunction with \"Collection\" blocks"
    },
    {
        "label": "Section Heading",
        "id": "cl_heading",
        "type": "text",
        "info": "Optional"
    },
    {
        "label": "Section Heading Color",
        "id": "cl_heading_color",
        "type": "select",
        "options": [
        { "label": "Primary", "value": "color-brand-primary" },
        { "label": "Secondary", "value": "color-brand-secondary" },
